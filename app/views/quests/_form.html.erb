<div class="quest_form">
  <%= form_with(model: quest, local: true) do |f| %>
    <%= render 'shared/validate_error_messages', resource: quest %>
    <div class="form-group">
      <%= f.label "develop_id", "Questid" %><br>
      <%= f.text_field :develop_id, placeholder: "開発ID" %>
    </div>
    <div class="form-group">
      <%= f.label "responsible", "担当者" %><br>
      <%= f.text_field :responsible %>
    </div>
    <div class="form-group">
      <%= f.label "title", "タイトル" %><br>
      <%= f.text_field :title, style: "width: 90%;" %>
    </div>
    <div class="form-group">
      <%= f.label "content", "コンセプト" %><br>
      <%= f.text_area :content, placeholder: "このクエストのコンセプト", style: "width: 90%; height: 150px;" %>
    </div>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
