<div class="page_head p-4">
  <%= render 'form', quest: @quest %>
  <div class="my-4">
    <%= link_to quest_path(@quest.id), method: :delete, data: { confirm: '削除しますか？' } do %>
      <%= icon('fas', 'trash-alt') %>
      <span>クエストの削除</span>
    <% end %>
  </div>
  <p><%= link_to "戻る", quest_path(@quest.id) %></p>
</div>
