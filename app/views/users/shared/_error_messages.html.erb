<% if resource.errors.any? %>
  <div class="alert alert-danger">
    <div id="error_explanation">
      <h2>
         ValidationError
      </h2>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>