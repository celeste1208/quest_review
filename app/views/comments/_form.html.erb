<%= form_with model: comment, remote: true do |f| %>
  <div class="form-group">
    <%= f.label "#{opinion(opinion_type)}" %><br>
    <%= f.text_area :content, cols: "50", rows: "5"%>
  </div>
  <%= f.hidden_field :quest_id, value: quest_id %>
  <%= f.hidden_field :opinion_type, value: opinion_type %>
  <%= f.submit "コメントする", class: "btn btn-primary" %>
<% end %>