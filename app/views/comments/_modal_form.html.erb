<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">New User</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="my-3 text-center">
        <%= form_with model: comment, remote: true do |f| %>
          <div class="form-group">
            <%= f.label "#{opinion(comment.opinion_type)}" %><br>
            <%= f.text_area :content, cols: "50", rows: "5"%>
          </div>
          <%= f.hidden_field :quest_id, value: comment.quest_id %>
          <%= f.hidden_field :opinion_type, value: comment.opinion_type %>
          <%= f.hidden_field :parent_id, value: comment.parent_id %>
          <%= f.submit "コメントする", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="modal-footer actions">
      fuga
    </div>
  </div>
</div>